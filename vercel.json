{
    "version": 2,
    "builds": [
      { 
        "src": "server.js", 
        "use": "@vercel/node" 
      },
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "build" }
      }
    ],
    "routes": [
      { "src": "/api/inventory/test-blob", "dest": "server.js" },
      { "src": "/api/inventory/(.*)", "dest": "server.js" },
      { "src": "/api/(.*)", "dest": "server.js" },
      { "handle": "filesystem" },
      { "src": "/(.*)", "dest": "server.js" }
    ]
  }